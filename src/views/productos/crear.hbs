<div class="row w-100">
    {{>sidebar}}
    <div class="col-md-10">
        <div class="row justify-content-around">
            <div class="col-md-8 mx-auto pt-3">
                <div class="card-header text-center">
                    <h3>{{titulo}}</h3>
                </div>

                <div class="card text-center">
                    <div class="card-body">
                        <form method="POST" action="{{accion}}" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" name="nombre" id="nombre" placeholder="Nombre"
                                            class="form-control" value="{{producto.nombre}}">
                                        <span class="text-danger">{{e.nombre}}</span>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="descripcion" id="descripcion" placeholder="Descripcion"
                                            class="form-control" value="{{producto.descripcion}}">
                                        <span class="text-danger">{{e.descripcion}}</span>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="modelo" id="modelo" placeholder="Modelo"
                                            class="form-control" value="{{producto.modelo}}">
                                        <span class="text-danger">{{e.modelo}}</span>
                                    </div>
                                    <div class="form-group">
                                        <input type="number" name="precio" id="precio" placeholder="Precio"
                                            class="form-control" value="{{producto.precio}}">
                                        <span class="text-danger">{{e.precio}}</span>
                                    </div>
                                    <div class="form-group">
                                        <input type="file" id="imagen" name="imagen" class="form-control-file">
                                    </div>
                                </div>
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <select name="marca_id" id="marca" class="form-control">
                                            {{#if producto.marca_id}}
                                            <option value="{{producto.marca_id._id}}">{{producto.marca_id.marca}}
                                            </option>
                                            {{/if}}
                                            <option>Marca</option>
                                            {{#each marcas as |item|}}
                                            <option value="{{item._id}}">{{item.marca}}</option>
                                            {{/each}}
                                        </select>
                                        <span class="text-danger">{{e.marca}}</span>
                                    </div>
                                    <div class="form-group">
                                        <select id="categoria" class="form-control">
                                            {{!-- {{#if usuario.rol}}
                                    <option>{{usuario.rol}}</option>
                                    {{/if}} --}}
                                            <option>Categoria</option>
                                            {{!-- {{#each marcas as |item|}}
                                    <option value="{{item._id}}">{{item.marca}}</option>
                                    {{/each}} --}}
                                        </select>
                                        <span class="text-danger">{{e.categoria}}</span>
                                    </div>
                                    <div class="form-check">
                                        <input type="checkbox" name="destacado" class="form-check-input"
                                            {{#if producto.destacado}}checked{{/if}}>
                                        <label class="form-check-label" for="exampleCheck1">Â¿Producto destacado?</label>
                                    </div>
                                    <div class="form-group mt-4">
                                        <button type="submit" class="btn btn-primary">{{boton}}</button>
                                        <a href="/productos" class="btn btn-sm btn-light">Cancelar</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4 pt-3">
                <div class="card">
                    <div id="preview">
                        <img class="card-img-top" {{#if producto.imagen}} src="../img/{{producto.imagen}}" {{else}}
                            src="../img/sinimagen.png" {{/if}} alt="Card image cap">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title" id="title-card"></h5>
                        <p class="card-text" id="modelo-card"></p>
                        <p class="card-text" id="precio-card"></p>
                        <p class="card-text" id="marca-card"></p>
                        <a href="#" class="btn btn-primary">Comprar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/crearProducto.js"></script>