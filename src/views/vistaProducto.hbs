<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
        <h1 class="font-weight-bold font-italic">PRODUCTO: {{producto.nombre}}</h1>
    </div>
    {{>navCategorias}}
    <div class="row justify-content-between align-items-center">
        <div class="col-md-5">
            <img class="img-fluid" src="/img/{{producto.imagen}}" alt="Card image cap">
            <hr>
            <div {{#unless producto.comentarios}}style="visibility:hidden" {{/unless}}>
                <div class="row">
                    <h3 class="font-weight-bold text-muted font-italic">Comentarios:</h3>
                </div>
                <div class="row">
                    <div class="col-6">
                        {{#each comentarios}}
                        <p class="text-muted" comentario>{{contenido}}</p>
                        {{/each}}
                    </div>
                    <div class="col-6 text-center">
                        <div class="form-group">
                            <h3 class="font-weight-bold text-muted font-italic m-0">Promedio:</h3>
                            <h1 class="display-4">{{promedio.valor}}</h1>
                            <p class="clasificacion">
                                <input readonly type="radio" {{#if promedio.cinco}}checked{{/if}}>
                                <label for="radio1">★</label>
                                <input readonly type="radio" {{#if promedio.cuatro}}checked{{/if}}>
                                <label for="radio2">★</label>
                                <input readonly type="radio" {{#if promedio.tres}}checked{{/if}}>
                                <label for="radio3">★</label>
                                <input readonly type="radio" {{#if promedio.dos}}checked{{/if}}>
                                <label for="radio4">★</label>
                                <input readonly type="radio" {{#if promedio.uno}}checked{{/if}}>
                                <label for="radio5">★</label>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5 pt-3">
            <h1 class="font-weight-bold">{{producto.nombre}}</h1>
            <hr>
            <h3 class="text-muted m-0 font-italic">{{producto.marca_id.marca}}</h3>
            <h3 class="text-muted m-0 font-italic">{{producto.modelo}}</h3>
            <p class="text-muted mt-2">$ {{producto.precio}}</p>
            <hr>
            <p class="m-0">Descripción del Producto:</p>
            <p class="text-muted">{{producto.descripcion}}</p>
            <hr>
            <p class="text-muted">cantidad: {{producto.cantidad}}</p>
            <input type="number" max="{{producto.cantidad}}" min="1" max="{{producto.cantidad}}" value="1"
                class="mb-2 cantidad-productos"><br>
            <span class="text-danger error-cantidad"></span>
            <button data-id="{{producto._id}}" class="btn btn-dark btn-block boton-agregar-producto">
                <i class="fas fa-cart-plus mr-2"></i>
                Agregar al carrito
            </button>
            <hr>
            <h3 class="font-weight-bold text-muted font-italic">Comentar:</h3>
            <input type="hidden" id="producto" value="{{producto._id}}" />
            <div class="form-group">
                <textarea type="text" name="comentario" id="comentario" placeholder="Comentario" class="form-control"
                    value="{{comentario.comentario}}"></textarea>
                <span class="text-danger">{{e.comentario}}</span>
            </div>
            <div class="form-group">
                <h3 class="font-weight-bold text-muted font-italic m-0">Calificación:</h3>
                <p class="clasificacion">
                    <input id="radio1" type="radio" name="estrellas" value="5">
                    <label for="radio1">★</label>
                    <input id="radio2" type="radio" name="estrellas" value="4">
                    <label for="radio2">★</label>
                    <input id="radio3" type="radio" name="estrellas" value="3">
                    <label for="radio3">★</label>
                    <input id="radio4" type="radio" name="estrellas" value="2">
                    <label for="radio4">★</label>
                    <input id="radio5" type="radio" name="estrellas" value="1">
                    <label for="radio5">★</label>
                </p>
            </div>
            <div class="form-group">
                <button id="btn-comentario" type="submit" class="btn btn-primary">Comentar</button>
            </div>
        </div>
    </div>
</div>